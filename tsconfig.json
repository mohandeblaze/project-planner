{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "types": [
            "node"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "dist"
    ]
}
