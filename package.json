{
    "workspaces": [
        "packages/*",
        "server/",
        "client/"
    ],
    "engines": {
        "node": "18"
    },
    "scripts": {
        "client": "npm run lib && npm run build --workspace=client",
        "server": "npm run build --workspace=packages --workspace=server",
        "start-server": "npm run start --workspace=server",
        "devc": "npm run dev --workspace=client",
        "devs": "npm run dev --workspace=server",
        "dev": "concurrently \"npm run devc\" \"npm run devs\"",
        "deploy-client": "npm run deploy --workspace=client"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
